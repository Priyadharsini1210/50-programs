using System;

class Program
{
    static void Main()
    {
        int[] arr = { 1, 2, 3, 4, 5 };
        Console.WriteLine("Original array:");
        foreach (var item in arr)
            Console.Write(item + " ");

        Array.Reverse(arr);

        Console.WriteLine("\nReversed array:");
        foreach (var item in arr)
            Console.Write(item + " ");
    }
}
