using System;

class Program
{
    static void Main()
    {
        Console.Write("Enter a string: ");
        string input = Console.ReadLine();

        int length = input.Length;
        if (length % 2 == 0)
        {
            Console.WriteLine($"The middle characters are: {input[length / 2 - 1]}{input[length / 2]}");
        }
        else
        {
            Console.WriteLine($"The middle character is: {input[length / 2]}");
        }
    }
}
